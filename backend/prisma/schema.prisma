generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Funcionario {
  id  Int @id @default(autoincrement())
  name String
  salario Float
  cargo String
  idade Int 
  totalDeVendas Float
}

model Livro {
  id Int @id @default(autoincrement())
  name String
  price Float
  autor String 
  ano Int 
  quantidade Int
}
